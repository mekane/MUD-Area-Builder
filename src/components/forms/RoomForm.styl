exitRowLabelHeight = 30px

.room-form
  position absolute
  right 0
  top 0
  width 300px

  &__label
    @extend $flex-between
    @extend $form-label

  &__room-name
  &__room-description
    @extend $form-input

  &__checkbox-label
    @extend $form-label
    clear left
    float left
    height exitRowLabelHeight
    padding 0

  &__room-input-label
    @extend $form-label
    float left
    font-size 0
    height exitRowLabelHeight
    margin-left 10px
    padding 0
    &--hidden
      display none

  &__exit-destination-input
    @extend $form-input
    width 40px

  &__update
    @extend $button
    margin-left 50%
    margin-top 12px
    padding 4px 32px
    transform translateX(-50%)
    &:hover
      background-color #f0faf0
