.form-input
  border 1px solid #ccc
  border-radius 4px
  font-size 14px
  padding 4px

.area-info-form
  width 300px

  &__label
    display flex
    justify-content space-between
    line-height 28px /* 2x font size? */
    padding 4px

  &__area-name
  &__file-name
  &__min-level
  &__max-level
  &__author-name
  &__min-level
  &__max-level
    @extend .form-input